include block_html/_style.pug
include block_html/_include.pug

+header()

.main-cont
	.banner-panel
		a(href="#").banner-panel-sm
			.banner-panel-sm-img
				img(src="img/a-service.png", alt="")
			.banner-panel-sm-info
				.banner-panel-sm-title Бесплатная
				.banner-panel-sm-text зарядка и диагностика
		a(href="#").banner-panel-lg
			.banner-panel-lg-title подбор аккумулятора
				span Специалистом
			.banner-panel-lg-cont
				.banner-panel-lg-cont-icon
					+icon("phone-call","icon")
				.banner-panel-lg-cont-numb 291-95-93
	.bread
		a(href="#").bread__el Главная
		a(href="#").bread__el Каталог
		a(href="#").bread__el Авто аккумуляторы
		.bread__el Авто аккумуляторы

.main-cont
	.product
		.product-img
			.product-img-wrap(style="background-image:url('img/product.jpg')")
		.product-info
			.product-info-head
				.product-info-head-content
					.product-info__title X-treme CLASSIC 60B24R, Россия
					.product-info__descr Производитель — Алькор, Страна производства — Россия
				.product-info-head-img
					img(src="img/product-logo.png", alt="")
			.condition
				//use class .condition-icon--true .condition-icon--false .condition-icon--middle
				.condition-icon.condition-icon--true
					+icon("battery","icon")
				.condition-text В наличии
			.product-img.product-img--mobile
				.product-img-wrap(style="background-image:url('img/product.jpg')")
			.product-info__descr
				.product-info__descr-title Характеристики
				- for (var j=0;j<2;j++)
					.book-row
						.book-row__title Емкость (А/ч)
						.book-row__dot
						.book-row__value 50
					.book-row
						.book-row__title Характеристики
						.book-row__dot
						.book-row__value 410
					.book-row
						.book-row__title Габариты (ДхШхВ)
						.book-row__dot
						.book-row__value 237 х 128 х 222 мм
		.product-get
			.product-get-logo
				img(src="img/product-logo.png", alt="")
			.product-cont-get
				.product-cont-price
					.product-cont-price__text
						span Цена:
						.product-cont-price__val 1 990 руб.
						.product-cont-price__text-add * Цена при условии сдачи старого аккумулятора аналогичной ёмкости
				.product-cont-footer__price
					.product-cont-footer__price-false 2 550 руб.
					.product-cont-footer__price-true 2 550 руб.
				.product-cont-footer
					.product-cont-footer__compare
						+icon("chart","icon")
					a(href="#").product-cont-footer__one Купить в 1 клик
					.product-cont-footer__cart
						+icon("shopping-cart","icon")
				a(href="#").product-cont-get-pass Купить в рассрочку
				

.product-tab
	.tab-container
		.main-cont
			.tab-head
				.tab-head__el.tab-head__el--active Где купить
				.tab-head__el Описание товара
				.tab-head__el.tab-head__el--question Задать вопрос
		.content-tab-wrap
			.main-cont
				.content-tab.content-tab--active
					.bay-location
						.bay-location__list-wrap
							.bay-location__list
								.bay-location__list-title Наличие в магазинах
								- for (var i=0;i<10;i++)
									.bay-location__list-el
										.bay-location-info
											.bay-location-info-text  мкрн. Горский, 60 (м.Студенческая)
											.bay-location-info-phone
												span тел:
												a(href="tel:+7(383)301-13-44") +7 (383) 301-13-44
										.bay-location-condition
											.condition
												.condition-icon.condition-icon--true
													+icon("battery","icon")
												.condition-text В наличии
						.bay-location__map map
			.content-tab
				.main-cont
					.product-decr
						.product-decr__col
							- for (var j=0;j<4;j++)
								.book-row
									.book-row__title Емкость (А/ч)
									.book-row__dot
									.book-row__value 50
								.book-row
									.book-row__title Характеристики
									.book-row__dot
									.book-row__value
										a(href="#") 410
								.book-row
									.book-row__title Габариты (ДхШхВ)
									.book-row__dot
									.book-row__value 111 x 222 x 333  мм
			.content-tab
.main-cont
	-
		var items = [
			'Аналогичные товары',
			'Сопутствующие товары ',
			'Вы смотрели'
			];
	each item in items
		.same-slider-el
			.service-title #{item}
			.slider-wrap
				.slider-control.slider-control--left
					+icon("arrow-left","icon")
				.slider-control.slider-control--right
					+icon("arrow-right","icon")
				.item-slider.slider-item
					- for (var i=0;i<8;i++)
						.item
							.item-sale
								img(src="img/icon-sale.png", alt="")
							a(href="#" style="background-image:url('img/product.png')").item-img
							.item-title AlphaLINE AGM 60.0 L2 (AX 560680/56020) обр
							.item-price
								.item-price__text Цена:
									.item-price__val 1 990 руб.
							.item-footer
								.item-footer__price-false 2 550 руб.
								.item-footer__get
									.item-footer__compare
										+icon("chart","icon")
									.item-footer__cart
										+icon("shopping-cart","icon")

+footer()
include ./block_html/_script.pug
