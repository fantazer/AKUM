include block_html/_style.pug
include block_html/_include.pug

+headerlp()

//head banner
.lp-banner-wrap(style="background-image:url('img/bg-triangle.jpg')")
	.main-cont
		.lp-banner
			.lp-banner__slogan
				.lp-banner__slogan-top в поиске хорошего корейского аккумулятора?
				.lp-banner__slogan-main Выбирайте лучший!
				.lp-banner__img
					img(src="img/akum-triple.png", alt="")

//row-get
.lp-row-get
	a(href="#").lp-row-get__btn Подберите АКБ для вашего автомобиля

//advant
.section-advant.section--gray
	.main-cont
		.section-title Аккумуляторы Moll - Лучший выбор
		.lp-advant
			.lp-advant__el
				.lp-advant__el-icon
					+icon("shield-empty","icon")
				.lp-advant__el-text Moll - это гарантия срока службы до 10 лет
			.lp-advant__el
				.lp-advant__el-icon
					+icon("star-flash","icon")
				.lp-advant__el-text Moll выбирают ведущие автоконцерны Audi, Volkswagen, Mersedes
			.lp-advant__el
				.lp-advant__el-icon
					+icon("cup","icon")
				.lp-advant__el-text Moll - это премиальное немецкое качество
			.lp-advant__el
				.lp-advant__el-icon
					+icon("round-check","icon")
				.lp-advant__el-text Moll - это ТОП-10 среди всех АКБ

//slider-items
.section-lp
	.main-cont
		.section-title Мы рекомендуем
		.items
			- for (var i=0;i<4;i++)
				.item
					a(href="#" style="background-image:url('img/product.png')").item-img
					.item-title AlphaLINE AGM 60.0 L2 (AX 560680/56020) обр
					.item-price
						.item-price__text Цена:
							.item-price__val.item-price__val--gray 1 990 руб.
					.item-get Купить

