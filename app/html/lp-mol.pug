//feature
.section-lp.section--gray.section-lp--feature
	.main-cont
		.section-title Основные характеристики акБ MOLL
		.feature
			-
				var items = [
					'Гарантия качества первой сборки, оригинальные запчасти ',
					'Система «Старт-Стоп»',
					'Технология Nano Carbon',
					'Большой ресурс АКБ',
					'Быстрый запуск холодного двигателя',
					'Возможность повторного использования',
					'Высокая термическая нагрузка (устойчивость к высоким температурам)',
					'Виброустойчивость',
					'Оптимальная защита от утечки',
					'Рассчитан на несколько устройств (климат-контроль, система навигации)'
					];
			each item,i in items
				.feature__el
					img(src="img/charact-"+(i+1)+".png", alt="").feature__el-img
					.feature__el-text #{item}
//services
.section-lp.section-lp--sevices
	.main-cont
		.service-title Ваш А-сервис
		.service-title-sub
			.service-title-sub__icon
				+icon("star","icon")
			.service-title-sub__text Услуги для наших покупателей БЕСПЛАТНО
		.service
			.service__el
				.service-head
					.service-head__icon
						+icon("tester","icon")
					.service-head__text Диагностика АКБ
				.service-text Рекомендуем проходить  диагностику 2 раза в год
				a(href="#").service-link Подробнее
			.service__el
				.service-head
					.service-head__icon
						+icon("akum","icon")
					.service-head__text Обслуживание АКБ
				.service-text Увеличим срок службы АКБ до 2 раз
				a(href="#").service-link Подробнее
			.service__el
				.service-head
					.service-head__icon
						+icon("tools","icon")
					.service-head__text Диагностика электрооборудования автомобиля
				.service-text Используем высокоточное сертифицированное диагностическое оборудование
				a(href="#").service-link Подробнее
			.service__el
				.service-head
					.service-head__icon
						+icon("batary","icon")
					.service-head__text Прием и обмен старых АКБ
				.service-text Новый вместо старого. Утилизируем старый АКБ правильно и выгодно
				a(href="#").service-link Подробнее
+footer()

